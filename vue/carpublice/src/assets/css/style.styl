/* list item style */
.mod-item
  width: 100%
  border-top: 1px solid #e6e6e6
  border-bottom: 1px solid #e6e6e6
  margin-bottom: 10px
  background: #fff
  color: #333
  .mod-con
    position: relative
    padding: 20px 0
    .mod-carinfo
      display: flex
      .pic
        flex: 0 0 100px
        margin: 0 15px
        width: 100px
        height:80px
        overflow: hidden
      .txt
        flex: 1
        padding-right: 15px
        font-size:12px
        overflow: hidden
        .name
          width: 100%
          height: 25px
          line-height: 25px
          font-size: 18px
          font-weight: normal
          overflow: hidden
        .desc
          height: 24px
          line-height: 24px
          font-size: 14px
          color: #a5a5a5
          overflow: hidden
        .price
          font-size: 15px
          .price-first
            display:block
            float: left
            padding-top: 10px
            color: #666
          .price-end
            display:block
            float: left
            padding-top: 10px
            margin-right: 15px
            font-size: 16px
            color: #e3101e
    .phone
      position: absolute
      right: 15px
      bottom: 15px
      padding: 6px
      border: 1px solid #3964d5
      border-radius: 100%
      text-decoration: none
  &:last-child
    margin-bottom: 0

/* search style */
.search-area
  position: relative
  top: 10px
  width: 100%
  height: 60px
  color: #a5a5a5
  .search-ipt
    position: absolute
    left: 50%
    top: 20px
    padding: 0 30px
    width: 75%
    height: 32px
    border: none
    border-radius: 5px
    background: #fff
    color:#a5a5a5
    font-size: 14px
    -moz-transform: translate(-50%, -50%)
    -ms-transform: translate(-50%, -50%)
    -webkit-transform: translate(-50%, -50%)
    transform: translate(-50%, -50%)
  .search-panel
    position: absolute
    top: 40px
    left: 15px
    background: #fff
    width: 100%
    .search-a
      display: block
      width: 100%
      height: 30px
      line-height: 30px
      font-size: 14px
      text-decoration: none
      white-space:nowrap;
      overflow:hidden;
      text-overflow:ellipsis;
      em
        font-style: normal
        color: #3964d5
  .icon-rearch
    position: absolute
    left: 25px
    top: 12px
    z-index: 5
  .icon-close2
    position: absolute
    right: 25px
    top: 12px
    z-index: 5

